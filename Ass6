#include <iostream>
#include <iomanip>

using namespace std;

void input_data(float data[3][7], char days[7][4])//function to input data and store in array
{
	int i = sizeof(data)/sizeof(data[0]);
	int j = sizeof(data)/sizeof(data[0]);
	float a;
	for(i=0;i<j;i++) //outer loop
	{
		for(j=0;j<7;j++)//inner loop
		{
			cout<<"Enter pounds of food eaten by monkey " <<i+1<<" on "<<days[j]<<":";
			//message used to prompt input
			cin>>a;
			if(a<0)
			{
				cout<<"Please do not enter a negative number.";
				j--;
			}
			else data[i][j]=a;
		}
	}
}

float average(float data[3][7]) //function for average calculation
{
	float avg=0;
	for(int i=0;i<3;i++)
	{
		for(int j=0;j<7;j++)
		avg= sum + data[i][j];
	}
	return sum; 
}

float least(float data[3][7]) //function for assigning least food
{
	float small=data[0][0];
	for(int i=0; i<3; i++)
	{
		for(int j=0; j<7; j++)
		if(data[i][j]<small)
			small=data[i][j];
	}
	return small;
}

float largest(float data[3][7])//largest calc function
{
	float large=data[0][0];
	for(int i=0;i<3;i++)
	{
		for(int j=0; j<7; j++)
			if(data[i][j]>large)
				large=data[i][j];
	}
	return large;
}

void output_data(float data[3][7])
{
	cout<<"\nPounds of food eaten by monkey and day of week."<<endl;
	cout<<"Monkey\tSun\tMon\tTue\tWed\tThu\tFri\tSat"<<endl;
	for(int i=0; i<3; i++)
	{
		cout<<i+1;
		for (int j=0; j<7; j++)
		{
			cout<<"\t"<<setprecision(1)<<fixed<<data[i][j];
		}
		cout<<endl;
	}
	cout<<endl<<endl;
	cout<<"The average food eaten per day by all monkeys:\t"<<setprecision(1)
		<<fixed<<average(data)<<" lbs"<<endl;
	cout<<"The least amount of food eaten by any monkey: \t"<<setprecision(1)
		<<fixed<<least(data)<<" lbs"<<endl;
	cout<<"The largest amount of food eaten by any monkey: \t"<<setprecision(1)
		<<fixed<<largest(data)<<" lbs"<<endl;
}

int main()
{
	float data[3][7];
	char days[7][4]={"Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"};
	input_data(data,days);
	output_data(data);
	return 0;
}
